<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <error-page>
        <error-code>404</error-code>
        <location>/erro.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>CadastrarPessoa</servlet-name>
        <servlet-class>controller.CadastrarPessoa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logar</servlet-name>
        <servlet-class>controller.Logar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Deslogar</servlet-name>
        <servlet-class>controller.Deslogar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarProduto</servlet-name>
        <servlet-class>controller.CadastrarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcluirProduto</servlet-name>
        <servlet-class>controller.ExcluirProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Anuncio</servlet-name>
        <servlet-class>controller.Anuncio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarProduto</servlet-name>
        <servlet-class>controller.AlterarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarregarProduto</servlet-name>
        <servlet-class>controller.CarregarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdicionarComentario</servlet-name>
        <servlet-class>controller.AdicionarComentario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastrarPessoa</servlet-name>
        <url-pattern>/cadastrarpessoa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logar</servlet-name>
        <url-pattern>/Logar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Deslogar</servlet-name>
        <url-pattern>/Deslogar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarProduto</servlet-name>
        <url-pattern>/CadastrarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirProduto</servlet-name>
        <url-pattern>/ExcluirProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Anuncio</servlet-name>
        <url-pattern>/Anuncio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarProduto</servlet-name>
        <url-pattern>/AlterarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarregarProduto</servlet-name>
        <url-pattern>/CarregarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdicionarComentario</servlet-name>
        <url-pattern>/AdicionarComentario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
